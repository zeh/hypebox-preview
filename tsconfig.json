{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"sourceMap": true,
		"jsx": "react",
		"baseUrl": ".",
		"experimentalDecorators": true,
		"paths": {
			"*" : [ "src/ts/*" ]
		},
		"lib": [
			"dom",
			"es2016"
		]
	},
	"include": [
		"node_modules/@types/**/*.d.ts",
		"./src/ts/**/*",
		"./test/**/*"
	],
	"exclude": [
		"./dist/**"
	],
	"compileOnSave": false
}
